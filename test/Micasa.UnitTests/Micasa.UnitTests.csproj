<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>false</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>false</IsPackable>

        <CodeAnalysisRuleSet>../../src/stylecop.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NSubstitute" Version="5.3.0" />
        <PackageReference Include="Shouldly" Version="4.3.0" />
        <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.556">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>

        <PackageReference Include="coverlet.msbuild" Version="6.0.4">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.1" />
        <PackageReference Include="TestableIO.System.IO.Abstractions.TestingHelpers" Version="22.1.0" />
        <PackageReference Include="xunit" Version="2.9.3" />
        <PackageReference Include="xunit.runner.visualstudio" Version="3.1.5">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <AdditionalFiles Include="../../src/stylecop.json" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\src\Micasa.Cli\Micasa.Cli.csproj" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Parsers\TestFiles\apt-cache-installed.txt" />
      <EmbeddedResource Include="Parsers\TestFiles\apt-cache-not-installed.txt" />
      <EmbeddedResource Include="GitHub\TestFiles\bat.json" />
      <EmbeddedResource Include="GitHub\TestFiles\ripgrep.json" />
      <EmbeddedResource Include="GitHub\TestFiles\lazygit.json" />
      <EmbeddedResource Include="GitHub\TestFiles\neovim.json" />
      <EmbeddedResource Include="GitHub\TestFiles\fd.json" />
      <EmbeddedResource Include="GitHub\TestFiles\fzf.json" />
      <EmbeddedResource Include="GitHub\TestFiles\eza.json" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="GitHub\TestFiles\" />
    </ItemGroup>
</Project>
